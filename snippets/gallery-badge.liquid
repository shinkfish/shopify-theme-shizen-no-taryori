{% doc %}
  Category Badge Component

  Renders a category badge with name and color from metaobject.

  @param {metaobject} category - Category metaobject (required)

  @example
  {% render 'gallery-badge', category: category %}
{% enddoc %}

{% liquid
  # Parameter validation
  assign category = category | default: empty

  unless category != empty
    echo '<!-- Error: category parameter required for gallery-badge snippet -->'
    break
  endunless

  # Get metaobject fields
  assign category_name = category.category_name.value
  assign category_color = category.category_color.value
%}

<div class="gallery-badge" style="--badge-color: {{ category_color }}">
  <span class="gallery-badge__text">{{ category_name }}</span>
</div>

{% stylesheet %}
  .gallery-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--badge-color, #000);
    color: white;
    border-radius: 0.25rem;
    font-weight: bold;
  }
{% endstylesheet %}
