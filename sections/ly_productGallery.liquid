<section>
  {% comment %} wrapper {% endcomment %}
  <div class="ly_cont ly_cont_section ">
    {% render 'bl_section-title', title: 'CATEGORY', sub_title: '商品カテゴリ', show_button: true %}
    <div class="mt-6 md:mt-10 flex gap-2 overflow-scroll">
      {% for category in section.settings.category_list %}
        {% render 'bl_gallery-badge', category: category %}
      {% endfor %}
    </div>
  </div>
  {% comment %} /wrapper {% endcomment %}
</section>

{% schema %}
{
  "name": "product-gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "metaobject_list",
      "id": "category_list",
      "label": "カテゴリリスト",
      "metaobject_type": "category"
    },
    {
      "type": "url",
      "id": "about_url",
      "label": "リンク先URL",
      "info": "ボタンのリンク先を指定します"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "画像",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "カテゴリーバッジ",
      "settings": {
        "category_list": ["dryfood", "paste", "sweets"]
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
