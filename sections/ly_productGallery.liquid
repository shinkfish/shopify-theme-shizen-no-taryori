{% liquid
  assign selected_collection = collections[section.settings.collection] | default: collections.all
%}

<section>
  {% comment %} wrapper {% endcomment %}
  <div class="ly_cont ly_cont_section ">
    {% render 'bl_section-title',
      title: section.settings.title,
      sub_title: section.settings.sub_title,
      show_button: section.settings.show_button
    %}
    <div class="mt-6 md:mt-10 flex gap-2 overflow-scroll">
      {% for category in section.settings.category_list %}
        {% render 'bl_collection-badge', category: category %}
      {% endfor %}
    </div>
    {% comment %} swiper {% endcomment %}
    <div class="ly_cont_block_sm">
      <div class="bl_swiper">
        <div
          class="swiper"
          data-swiperSlidePC="4"
          data-swiperSlideSP="1.5"
        >
          <div class="swiper-wrapper">
            {% for product in selected_collection.products %}
              <div class="swiper-slide h-full">
                {% render 'bl_card_product', product: product %}
              </div>
            {% endfor %}
          </div>
          {% render 'bl_swiper_controls' %}
        </div>
      </div>
      {% comment %} /swiper {% endcomment %}
    </div>
  </div>
  {% comment %} /wrapper {% endcomment %}
</section>

{% schema %}
{
  "name": "product-gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "タイトル"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "サブタイトル"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "ボタン表示",
      "default": true
    },
    {
      "type": "metaobject_list",
      "id": "category_list",
      "label": "カテゴリリスト",
      "metaobject_type": "category"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "表示するコレクションを選択"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "リンク先URL",
      "info": "ボタンのリンク先を指定します"
    }
  ],
  "presets": [
    {
      "name": "商品スライダー",
      "settings": {
        "category_list": ["dryfood", "paste", "sweets"]
      }
    }
  ]
}
{% endschema %}
